<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="textInputLayout">
        <item name="android:textColorHint">#808080</item>
        <item name="colorControlNormal">#222222</item>
        <item name="colorControlActivated">@color/default_color</item>
        <item name="colorControlHighlight">@color/default_color</item>
        <item name="colorError">@android:color/holo_red_dark</item>
    </style>

    <style name="dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="dialogAnim" mce_bogus="1" parent="android:Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/anim_dlg_in</item>
        <item name="android:windowExitAnimation">@anim/anim_dlg_out</item>
    </style>

    <style name="roundedHead">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="timePicker" >
        <item name="colorAccent">@color/default_color</item>
    </style>
</resources>